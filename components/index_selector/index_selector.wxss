
/* 不要直接给 words-wrap高度 */
.words-wrap {
    position: fixed;
    top: 50%;
    right: 10rpx;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
}
.words-wrap .words-item {
    height: 36rpx;
    line-height: 36rpx;
    padding: 0 10rpx;
}
.words-action-top {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 120rpx;
    height: 120rpx;
    font-size: 40rpx;
    font-weight: bold;
    background-color: rgba(0, 0, 0, 0.1);
    border-radius: 10rpx;
    text-align: center;
    line-height: 120rpx;
}